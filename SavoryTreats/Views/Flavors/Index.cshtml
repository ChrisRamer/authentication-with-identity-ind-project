@{
	Layout = "_Layout";
}

@using SavoryTreats.Models
@model List<SavoryTreats.Models.Flavor>

<h2 id="title">Flavors</h1>

	<hr />

	@if (Model.Count == 0)
	{
		<p>No flavors have been added yet.</p>
	}
	else
	{
		@foreach (Flavor flavor in Model)
		{
			<li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
		}
	}

	<hr />

	<p>
		@Html.ActionLink("Add a new flavor", "Create")
		|
		@Html.ActionLink("Go to homepage", "Index", "Home")
	</p>
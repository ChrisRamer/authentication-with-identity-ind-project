@{
	Layout = "_Layout";
}

@model SavoryTreats.Models.Treat

<h2 id="title">Add an Flavor to <b>@Html.DisplayFor(model => model.Name)</b></h2>

<hr />

@using (Html.BeginForm())
{
	@Html.HiddenFor(model => model.TreatId)

	@Html.Label("Select flavor")
	<br>
	@Html.DropDownList("FlavorId")
	<br><br>
	<input type="submit" value="save" />
}

<hr />

<p>
	@Html.ActionLink("View all treats", "Index")
	|
	@Html.ActionLink("Go to homepage", "Index", "Home")
</p>
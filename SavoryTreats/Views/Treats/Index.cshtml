@{
	Layout = "_Layout";
}

@using SavoryTreats.Models
@model List<SavoryTreats.Models.Treat>

<h2 id="title">Treats</h2>

<hr />

@if (Model.Count == 0)
{
	<p>No treats have been added yet.</p>
}
else
{
	@foreach (Treat treat in Model)
	{
		<li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
	}
}

<hr />

<p>
	@Html.ActionLink("Add a new treat", "Create")
	|
	@Html.ActionLink("Go to homepage", "Index", "Home")
</p>